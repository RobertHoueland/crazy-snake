<main class="game-container">
  <p class="game-box">Our Game Will be here</p>
</main>

<div class="score-grid">
  <div id="name-header">Player</div>
  <div id="score-header">Score</div>
  
  {{#each players}}
    {{> table}}
  {{/each}}
</div>


<div id="modal-backdrop" class="hidden"></div>
<div id="enter-name-modal" class="hidden">
  <div class="modal-dialog">

    <div class="modal-header">
      <h3>Enter Your Name</h3>
      <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
      <div class="input-element">
        <textarea id="name-input"></textarea>
      </div>

    <div class="modal-footer">
      <button type="button" class="modal-cancel-button">Cancel</button>
      <button type="button" class="modal-accept-button">Accept</button>
    </div>

  </div>
</div>
