{{#if displayAll}}
<p class="current-score">
  Current Score: 
</p>
{{/if}}

<div class="score-grid">
  <div id="name-header">Player</div>
  <div id="score-header">Score</div>
  
  {{#each players}}
    {{> table}}
  {{/each}}
</div>

{{#if displayAll}}
<main class="game-container">
  <canvas class="game-box" width="512" height="512"></canvas>
  <div class="instructions-container">
    <p class="instructions">
      Use WASD keys or arrow keys to play!
      <br><br>
      Press key to select difficulty to start:<br>
      1: Easy<br>
      2: Medium<br>
      3: Hard<br>
      4: Ultra<br><br><br>
      Collect fruit for score and to grow longer!<br><br>
      Watch for out for obstacles!
    </p>
  </div>
</main>

<div id="modal-backdrop" class="hidden"></div>

<div id="game-over-modal" class="hidden">
  <div id="game-over-modal-dialog" class="modal-dialog">

    <div id="game-over-modal-header" class="modal-header">
      <h3>Game Over</h3>
      <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div id="game-over-modal-body" class="modal-body">
      <p class="score-side-tile">Score:</p>
      <p class="game-score"></p>
      <div class="input-element">
        <label for="username-input">Name: </label>
        <input id="username-input"></input>
      </div>
    </div>

    <div class="game-over-modal-footer">
        <button type="button" class="game-modal-accept-button">Okay</button>
    </div>
    
  </div>
</div>
{{/if}}
